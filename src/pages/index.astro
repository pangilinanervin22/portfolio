---
import Welcome from "../components/Welcome.astro";
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/NavBar.astro";
import Introduction from "../components/introduction/Introduction.astro";
import Experience from "../components/experience/Experience.astro";
import Techs from "../components/techs/Technology.astro";
import background from "../assets/background.png";
import Projects from "../components/projects/Projects.astro";
---

<Layout>
        <main>
                <img
                        src={background.src}
                        alt="Background Image"
                        srcset=""
                        class="background-image"
                />
                <Navbar />
                <Welcome />
                <Introduction />
                <Experience />
                <Techs />
                <Projects />
        </main>
</Layout>

<style>
        main {
                display: flex;
                flex-direction: column;
                justify-items: center;
                align-items: center;
                width: 100vw;
        }

        .background-image {
                position: fixed;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                object-fit: cover;
                z-index: 10;
                opacity: 0.25;
                pointer-events: none; /* Allows clicks to pass through */
        }
</style>
