<style lang="scss">
        .main-container {
                display: flex;
                flex-direction: column;
                align-items: center;
                height: 92vh;
                padding: 8px 16px 16px;
        }

        .content-container {
                height: 100%;
                width: 100%;
                display: flex;
                align-items: center;
                justify-content: center;
                background-repeat: no-repeat;
                background-size: cover;
                background-position: center;
                padding: 1rem;
        }

        .content {
                text-align: center;

                h1 {
                        font-size: clamp(2.2rem, 4vw, 4rem);
                        line-height: 1.1;
                        margin-bottom: 0.75rem;
                        letter-spacing: 0.05em;
                        color: var(--color-text-primary);
                        font-weight: 500;
                        font-family: "Playfair Display", serif;
                }

                p {
                        font-size: clamp(1rem, 0.6vw + 0.9rem, 1.35rem);
                        line-height: 1.5;
                        margin-top: 0.5rem;
                        color: var(--color-text-secondary);
                }

                .actions {
                        margin-top: 1.25rem;
                }

                .btn {
                        display: inline-block;
                        padding: 1rem 1.75rem;
                        font-size: clamp(0.95rem, 0.5vw + 0.85rem, 1.05rem);
                        font-weight: 600;
                        color: var(--color-text-inverse);
                        background: var(--color-primary);
                        border: none;
                        text-decoration: none;
                        transition:
                                transform 0.15s ease,
                                filter 0.15s ease;
                }

                .btn:hover {
                        filter: brightness(1.05);
                        transform: translateY(-1px);
                }

                .btn:active {
                        transform: translateY(0);
                }
        }

        .scroll-hint {
                position: fixed;
                bottom: 5%;
                left: 50%;
                transform: translateX(-50%);
                display: inline-flex;
                align-items: center;
                gap: 0.6rem;
                padding: 0.55rem 0.9rem;
                font-size: 0.95rem;
                font-weight: 600;
                color: var(--color-primary);
                backdrop-filter: saturate(140%) blur(8px);
                pointer-events: none;
                z-index: 10;
                transition:
                        opacity 200ms ease,
                        transform 200ms ease;
        }
        .scroll-hint[data-hidden="true"] {
                opacity: 0;
                transform: translate(-50%, 8px);
        }
        .scroll-hint .label {
                letter-spacing: 0.04em;
        }

        /* Mouse indicator */
        .mouse {
                width: 16px;
                height: 26px;
                border: 2px solid currentColor;
                border-radius: 10px;
                display: inline-flex;
                align-items: flex-start;
                justify-content: center;
                padding-top: 4px;
                opacity: 0.9;
        }
        .mouse .wheel {
                width: 3px;
                height: 6px;
                border-radius: 2px;
                background: currentColor;
                opacity: 0.9;
                animation: wheel 1.5s ease-in-out infinite;
        }

        @keyframes wheel {
                0% {
                        transform: translateY(0);
                        opacity: 0.95;
                }
                60% {
                        transform: translateY(8px);
                        opacity: 0;
                }
                100% {
                        transform: translateY(0);
                        opacity: 0;
                }
        }

        @media (prefers-reduced-motion: reduce) {
                .mouse .wheel {
                        animation: none;
                }
        }
</style>
