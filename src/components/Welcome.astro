---
import Border from "./_common/Border.astro";
import GithubIcon from "../assets/icons/github.svg";
import LinkedinIcon from "../assets/icons/linkedin.svg";
import EmailIcon from "../assets/icons/email.svg";
---

<Border aria-hidden="true" />
<section 
        id="welcome" 
        class="main-container" 
        aria-labelledby="welcome-heading"
        itemscope 
        itemtype="https://schema.org/Person"
>
        <div class="content-container">
                <header class="content">
                        <h1 id="welcome-heading" itemprop="name">
                                Ervin Pangilinan
                        </h1>
                        <p class="tagline" itemprop="description">
                                Full Stack Developer
                        </p>
                        
                        <!-- Minimalist Social Links -->
                        <nav class="social-links" aria-label="Social media and contact links">
                                <a
                                        href="https://github.com/pangilinanervin22"
                                        target="_blank"
                                        rel="noopener noreferrer"
                                        class="social-link"
                                        aria-label="GitHub"
                                        itemprop="sameAs"
                                >
                                        <GithubIcon class="social-icon" aria-hidden="true" />
                                </a>
                                
                                <a
                                        href="https://www.linkedin.com/in/ervin-pangilinan"
                                        target="_blank"
                                        rel="noopener noreferrer"
                                        class="social-link"
                                        aria-label="LinkedIn"
                                        itemprop="sameAs"
                                >
                                        <LinkedinIcon class="social-icon" aria-hidden="true" />
                                </a>
                                
                                <a
                                        href="mailto:pangilinanervin22@gmail.com"
                                        class="social-link"
                                        aria-label="Email"
                                        itemprop="email"
                                >
                                        <EmailIcon class="social-icon" aria-hidden="true" />
                                </a>
                        </nav>
                        
                        <div class="actions">
                                <a
                                        class="btn"
                                        href="/portfolio/Ervin_Pangilinan_CV_2025.pdf"
                                        download="Ervin_Pangilinan_CV_2025.pdf"
                                        aria-label="Download CV"
                                        itemprop="url"
                                >
                                        Download CV
                                </a>
                        </div>
                </header>
        </div>
        
        <!-- Hidden structured data for better SEO -->
        <script type="application/ld+json">
        {
                "@context": "https://schema.org",
                "@type": "Person",
                "name": "Ervin Pangilinan",
                "jobTitle": "Full Stack Developer",
                "description": "Full Stack Developer specializing in web applications, mobile development, and DevOps practices",
                "url": "https://pangilinanervin22.github.io/portfolio/",
                "email": "pangilinanervin22@gmail.com",
                "sameAs": [
                        "https://github.com/pangilinanervin22",
                        "https://www.linkedin.com/in/ervin-pangilinan"
                ],
                "knowsAbout": ["Web Development", "Mobile Development", "DevOps", "Full Stack Development"],
                "hasOccupation": {
                        "@type": "Occupation",
                        "name": "Full Stack Developer"
                }
        }
        </script>
</section>
<Border aria-hidden="true" />

<style>
        .main-container {
                display: flex;
                align-items: center;
                justify-content: center;
                min-height: 80vh;
                padding: 2rem;
        }

        .content-container {
                width: 100%;
                max-width: 600px;
                margin: 0 auto;
        }

        .content {
                text-align: center;

                h1 {
                        font-size: clamp(2.5rem, 5vw, 4rem);
                        font-weight: 300;
                        letter-spacing: -0.02em;
                        margin: 0 0 1rem 0;
                        color: var(--color-text-primary);
                        line-height: 1.1;
                }

                .tagline {
                        font-size: clamp(1.1rem, 2vw, 1.3rem);
                        font-weight: 400;
                        color: var(--color-text-secondary);
                        margin: 0 0 3rem 0;
                        line-height: 1.4;
                }
        }

        /* Minimalist Social Links */
        .social-links {
                display: flex;
                justify-content: center;
                gap: 1.5rem;
                margin: 0 0 3rem 0;
        }

        .social-link {
                display: flex;
                align-items: center;
                justify-content: center;
                width: 56px;
                height: 56px;
                color: var(--color-text-secondary);
                text-decoration: none;
                transition: color 0.2s ease;
                
                &:hover {
                        color: var(--color-text-primary);
                }
        }

        .social-icon {
                width: 32px;
                height: 32px;
        }

        /* Clean Action Button */
        .actions {
                display: flex;
                justify-content: center;
        }

        .btn {
                display: inline-flex;
                align-items: center;
                padding: 0.8rem 2rem;
                font-size: 1rem;
                font-weight: 500;
                color: var(--color-text-primary);
                text-decoration: none;
                border: 1px solid var(--color-text-primary);
                background: transparent;
                transition: all 0.2s ease;
                
                &:hover {
                        background: var(--color-text-primary);
                        color: var(--color-background);
                }
        }

        /* Mobile Responsive */
        @media (max-width: 768px) {
                .main-container {
                        padding: 1.5rem;
                        min-height: 90vh;
                }

                .social-links {
                        gap: 1.2rem;
                        margin: 0 0 2.5rem 0;
                }

                .social-link {
                        width: 52px;
                        height: 52px;
                }

                .social-icon {
                        width: 28px;
                        height: 28px;
                }
        }

        @media (max-width: 480px) {
                .main-container {
                        padding: 1rem;
                }

                .content h1 {
                        margin-bottom: 0.8rem;
                }

                .tagline {
                        margin-bottom: 2.5rem;
                }

                .social-links {
                        gap: 1rem;
                        margin-bottom: 2rem;
                }

                .btn {
                        padding: 0.7rem 1.5rem;
                        font-size: 0.95rem;
                }
        }
</style>
