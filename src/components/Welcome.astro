---
import Border from "./_common/Border.astro";
---

<section id="welcome" class="main-container" aria-labelledby="welcome-heading">
        <Border aria-hidden="true" />
        <div class="content-container">
                <header class="content">
                        <h1 id="welcome-heading">Ervin Pangilinan Portfolio</h1>
                        <p class="tagline">
                                Developer: Making tech feel simple, one
                                complicated feature at a time.
                        </p>
                        <p class="actions">
                                <a
                                        class="btn"
                                        href="Ervin_Pangilinan_CV_2025.pdf"
                                        download
                                >
                                        Download CV
                                </a>
                        </p>
                </header>
        </div>
        <Border aria-hidden="true" />
</section>

<style>
        .main-container {
                display: flex;
                flex-direction: column;
                align-items: center;
                height: 92vh;
                padding: 8px 16px 16px;
        }

        .content-container {
                height: 100%;
                width: 100%;
                display: flex;
                align-items: center;
                justify-content: center;
                background-repeat: no-repeat;
                background-size: cover;
                background-position: center;
                padding: 1rem;
        }

        .content {
                text-align: center;

                h1 {
                        font-size: clamp(2.4rem, 4.5vw, 4.4rem);
                        line-height: 1.1;
                        margin-bottom: 0.75rem;
                        letter-spacing: 0.05em;
                        color: var(--color-text-primary);
                        font-weight: 500;
                        font-family: "Playfair Display", serif;
                }

                p {
                        font-size: clamp(1rem, 0.6vw + 0.9rem, 1.35rem);
                        line-height: 1.5;
                        margin-top: 0.5rem;
                        color: var(--color-text-secondary);
                }

                .actions {
                        margin-top: 1.25rem;
                }

                .btn {
                        display: inline-block;
                        padding: 1rem 1.75rem;
                        font-size: clamp(0.95rem, 0.5vw + 0.85rem, 1.05rem);
                        font-weight: 600;
                        color: var(--color-text-inverse);
                        background: var(--color-primary);
                        border: none;
                        text-decoration: none;
                        transition:
                                transform 0.15s ease,
                                filter 0.15s ease;
                }

                .btn:hover {
                        filter: brightness(1.05);
                        transform: translateY(-1px);
                }

                .btn:active {
                        transform: translateY(0);
                }
        }
</style>
