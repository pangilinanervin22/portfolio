<style>
        .introduction-container {
                width: 100vw;
                display: flex;
                flex-direction: row;
                align-items: center;
                justify-content: center;
                gap: 32px;
                margin-top: 32px;
                background: var(--color-background);
                color: var(--color-text-primary);
                margin-block: 10px 100px;
        }

        .introduction-content {
                width: 40%;
                display: flex;
                flex-direction: column;
                align-items: center;
                justify-content: center;
                gap: 16px;
        }

        .introduction-main,
        .introduction-skills {
                width: 100%;
        }

        .introduction-main p {
                font-size: 1.05rem;
                line-height: 1.65;
                color: var(--color-text-secondary);
                text-align: justify;
                letter-spacing: 0.2px;
                -webkit-hyphens: auto;
        }

        .introduction-main {
                display: flex;
                flex-direction: column;
                gap: 12px;
                margin-bottom: 16px;
        }

        .introduction-main h1 {
                font-size: 3rem;
                line-height: 1.15;
        }

        .introduction-main p:first-of-type {
                text-indent: 0;
        }

        .introduction-main p:first-of-type::first-letter {
                float: left;
                font-size: 3.4rem;
                line-height: 0.9;
                font-weight: 600;
                margin: 4px 10px 0 0;
                font-family: "Playfair Display", serif;
                color: var(--color-text-primary);
        }

        .introduction-skills {
                display: flex;
                flex-wrap: wrap;
                flex-direction: row;
                justify-content: space-between;
                gap: 16px;
        }

        .introduction-image {
                position: relative;
                display: flex;
                justify-content: center;
                width: clamp(400px, 25%, 600px);
                padding: 12px;
                background: var(--color-surface);
                border: 2px dashed var(--color-primary-20);
                outline: 122px solid var(--color-primary-100);
        }

        .introduction-image img {
                width: 100%;
                height: auto;
                display: block;
                filter: grayscale(1) brightness(0.98) contrast(1.05);
                animation: introImagePulse 6s ease-in-out infinite;
                transition: all 0.3s ease-in-out;
        }

        .introduction-image img:hover {
                scale: 1.01;
                box-shadow:
                        0 0 0 1px var(--color-shadow),
                        0 8px 24px var(--color-shadow-strong);
        }

        @media (max-width: 1100px) {
                .introduction-container {
                        flex-direction: column;
                        padding: 0 24px 48px;
                }
                .introduction-content {
                        width: 100%;
                }
                .introduction-image {
                        width: min(520px, 100%);
                }
        }
</style>
