---
interface ProjectItem {
        title: string;
        description: string;
        stack: string[];
        repo?: string;
        demo?: string;
        year?: string;
        image?: ImageMetadata;
        imageAlt?: string;
}
interface Props {
        project: ProjectItem;
        index: number;
}
const { project: p, index: i } = Astro.props as Props;
import GithubIcon from "../../assets/icons/github.svg";
import LinkIcon from "../../assets/icons/link.svg";
---

<li
        class="project-card"
        itemprop="itemListElement"
        itemscope
        itemtype="https://schema.org/CreativeWork"
>
        <article class="card" aria-labelledby={`proj-${i}-title`}>
                {
                        p.image && (
                                <figure class="media" itemprop="image">
                                        <img
                                                src={p.image.src}
                                                width={p.image.width}
                                                height={p.image.height}
                                                alt={
                                                        p.imageAlt ||
                                                        `${p.title} screenshot`
                                                }
                                                loading="lazy"
                                        />
                                        <figcaption class="visually-hidden">
                                                {p.imageAlt || p.title}
                                        </figcaption>
                                </figure>
                        )
                }
                <header class="card-head">
                        <h2
                                id={`proj-${i}-title`}
                                class="card-title"
                                itemprop="headline"
                        >
                                {p.title}
                        </h2>
                        {
                                p.year && (
                                        <span class="year" aria-label="Year">
                                                {p.year}
                                        </span>
                                )
                        }
                </header>
                <p class="card-desc" itemprop="description">{p.description}</p>
                <ul class="stack" role="list" aria-label="Tech stack">
                        {
                                p.stack.map((t) => (
                                        <li class="badge" itemprop="keywords">
                                                {t}
                                        </li>
                                ))
                        }
                </ul>
                {
                        (p.demo || p.repo) && (
                                <nav class="links" aria-label="Project links">
                                        {p.demo && (
                                                <a
                                                        class="link"
                                                        href={p.demo}
                                                        target="_blank"
                                                        rel="noopener noreferrer"
                                                        itemprop="url"
                                                        aria-label={`Open live site for ${p.title}`}
                                                >
                                                        <LinkIcon
                                                                class="icon"
                                                                aria-hidden="true"
                                                        />
                                                        <span>Live</span>
                                                </a>
                                        )}
                                        {p.repo && (
                                                <a
                                                        class="link"
                                                        href={p.repo}
                                                        target="_blank"
                                                        rel="noopener noreferrer"
                                                        itemprop="codeRepository"
                                                        aria-label={`Open GitHub repo for ${p.title}`}
                                                >
                                                        <GithubIcon
                                                                class="icon"
                                                                aria-hidden="true"
                                                        />
                                                        <span>GitHub</span>
                                                </a>
                                        )}
                                </nav>
                        )
                }
        </article>
</li>

<style scoped lang="css">
        .project-card {
                position: relative;
        }

        .card {
                position: relative;
                background: var(--color-surface);
                border: 2px dashed var(--color-border);
                border-radius: 24px;
                padding: 1.45rem 1.5rem 2rem;
                display: flex;
                flex-direction: column;
                gap: 1.05rem;
                height: 96%;
                box-shadow:
                        0 3px 8px -2px var(--color-shadow-soft),
                        0 6px 18px -3px var(--color-shadow);
                transition:
                        border-color 0.25s,
                        transform 0.25s,
                        box-shadow 0.25s;
        }

        @media (hover: hover) {
                .card:hover {
                        border-color: var(--color-primary-40);
                        transform: translateY(-4px);
                        box-shadow:
                                0 10px 22px -4px var(--color-shadow),
                                0 18px 36px -6px var(--color-shadow-strong);
                }
                .card:hover .media img {
                        transform: scale(1.04);
                        filter: brightness(0.98) contrast(1.08) saturate(1.05);
                }
        }

        .media {
                position: relative;
                aspect-ratio: 4/2;
                width: 100%;
                margin: 0;
                overflow: hidden;
                border-radius: 14px;
                background: var(--color-surface-alt);
                border: 1px solid var(--color-border);
        }

        .media img {
                width: 100%;
                height: 100%;
                object-fit: fill;
                display: block;
                filter: brightness(0.92) contrast(1.05) saturate(0.95);
                transition:
                        transform 0.5s ease,
                        filter 0.5s ease;
        }

        .visually-hidden {
                position: absolute;
                width: 1px;
                height: 1px;
                padding: 0;
                margin: -1px;
                overflow: hidden;
                clip: rect(0 0 0 0);
                white-space: nowrap;
                border: 0;
        }

        .card-head {
                display: flex;
                align-items: center;
                justify-content: space-between;
                gap: 0.75rem;
                flex-wrap: wrap;
        }

        .card-title {
                margin: 0;
                font-size: 1.39rem;
                line-height: 1.25;
                font-weight: 700;
                letter-spacing: 0.5px;
                width: 100%;
        }

        .year {
                font-size: 0.75rem;
                letter-spacing: 0.08em;
                padding: 0.4rem 0.65rem;
                border: 1px solid var(--color-border);
                border-radius: 999px;
                color: var(--color-text-muted);
                background: var(--color-surface-alt);
        }

        .card-desc {
                margin: 0;
                font-size: 1.05rem;
                line-height: 1.68;
                color: var(--color-text-secondary);
                flex-grow: 1;
        }

        .stack {
                list-style: none;
                display: flex;
                flex-wrap: wrap;
                gap: 0.45rem;
                margin: 0;
                padding: 0;
        }

        .badge {
                font-size: 0.7rem;
                letter-spacing: 0.07em;
                font-weight: 600;
                padding: 0.5rem 0.65rem;
                border-radius: 999px;
                background: var(--color-surface-alt);
                border: 1px solid var(--color-border);
                color: var(--color-text-muted);
        }

        .links {
                display: flex;
                gap: 0.85rem;
                margin-top: 0.25rem;
        }

        .link {
                position: relative;
                font-size: 0.78rem;
                letter-spacing: 0.08em;
                font-weight: 600;
                text-transform: uppercase;
                padding: 0.55rem 0.85rem;
                border: 1px dashed var(--color-border);
                border-radius: 10px;
                background: var(--color-surface-alt);
                color: var(--color-text-primary);
                text-decoration: none;
                transition:
                        background 0.25s,
                        border-color 0.25s;
                display: inline-flex;
                align-items: center;
                gap: 0.45rem;
        }

        .icon {
                width: 1rem;
                height: 1rem;
                display: block;
        }

        @media (hover: hover) {
                .link:hover {
                        background: var(--color-primary-20);
                        border-color: var(--color-primary-40);
                }
        }

        @media (prefers-reduced-motion: reduce) {
                .card,
                .link,
                .media img {
                        transition: none;
                }
        }
</style>
